@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "We love Groestlcoin - Your Business Should Too!";
}

<section>
    <div>
        <div class="modal-dialog modal-login">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Sign In</h4>
                </div>
                <div class="modal-body">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Email" class="input-group-text"><span class="input-group-addon fa fa-user"></span></label>
                                </div>

                                <input asp-for="Email" class="form-control" placeholder="Email" required="required"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="Password" class="input-group-text"><span class="input-group-addon fa fa-lock"></span></label>
                                </div>
                                <input asp-for="Password" class="form-control" placeholder="Password" required="required"/>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg" id="LoginButton">Sign in</button>
                        </div>
                        <p class="hint-text"><a asp-action="ForgotPassword">Forgot your password?</a></p>
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h4>Your next-generation Groestlcoin Payment Portal</h4>
                    <hr />
                    @{
                        var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                        if (loginProviders.Count == 0) {
                            <div>
                                <p>
                                    Are you considering accepting Cryptocurrency payments but are concerned with trusting other entities with your precious private keys? This is the payment solution for your business - supporting various secure hardware wallets - this gives you back control.
                                    There is no better Cryptocurrency to accept than Groestlcoin - Fast, Secure and Cheap.
                                </p>
                            </div>
                        }
                        else {
                            <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in loginProviders) {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.Name</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
